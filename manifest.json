{
  "name": "My Slack Workspaces",
  "short_name": "My Slack Workspaces",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "A simple browser extension to easily access multiple slack workspaces.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "default_locale": "en",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "*://slack.com/your-workspaces*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://slack.com/your-workspaces*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "icons/icon-32.png",
      "64": "icons/icon-64.png"
    },
    "default_title": "My Slack Environments",
    "default_popup": "popup.html"
  }
}


